<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/secondary_color_black</item>
        <item name="colorAccent">@color/secondary_color_black</item>
        <item name="android:textColorPrimaryInverse">@color/secondary_color_black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/secondary_color_5_percent_black</item>
    </style>

    <!--Theme for Login Page-->
    <style name="LoginPage" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/secondary_color_5_percent_black</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:homeAsUpIndicator">@drawable/vector_drawable_prv_arrow</item>
        <item name="homeAsUpIndicator">@drawable/vector_drawable_prv_arrow</item>
        <item name="android:textColorPrimary">@color/secondary_color_black</item>
        <item name="colorControlNormal">#000</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/secondary_color_black</item>
        <item name="fontFamily">@fonts/helvetica45.ttf</item>
        <item name="android:textSize">@dimen/_15sdp</item>

    </style>

    <style name="loginPage_buttons" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/secondary_color_white</item>
        <item name="fontFamily">@fonts/helvetica45.ttf</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Helvetica65_15pts_white" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@fonts/helvetica65.ttf</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/secondary_color_white</item>
    </style>

    <style name="customTextViewStyleHelveticaLight" parent="@android:style/Widget.TextView">
        <item name="android:paddingTop">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@fonts/helvetica-light.ttf</item>
        <item name="android:paddingBottom">@dimen/_20sdp</item>
        <item name="android:textColor">@drawable/nav_menu_item_text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
    </style>

    <style name="lineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:background">@color/secondary_color_30_percent_black</item>
    </style>

    <style name="customTextViewStyleHelveticaMedium" parent="@android:style/Widget.TextView">
        <item name="android:paddingTop">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@fonts/helvetica45.ttf</item>
        <item name="android:paddingBottom">@dimen/_15sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
    </style>

    <style name="browse_buttons" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/secondary_color_white</item>
        <item name="fontFamily">@fonts/helvetica45.ttf</item>
        <item name="android:capitalize">words</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Helvetica45_12pts_black" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@fonts/helvetica45.ttf</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/secondary_color_black</item>
    </style>

    <style name="Helvetica45_8pts_black" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@fonts/helvetica45.ttf</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@color/secondary_color_black</item>
    </style>

    <style name="Helvetica65_12pts_black" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@fonts/helvetica65.ttf</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/secondary_color_black</item>
    </style>

    <style name="Helvetica45_10pts_black" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@fonts/helvetica45.ttf</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/secondary_color_black</item>
    </style>

    <style name="Helvetica45_15pts_black" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@fonts/helvetica45.ttf</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/secondary_color_black</item>
    </style>

    <style name="Helvetica65_15pts_black" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@fonts/helvetica65.ttf</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/secondary_color_black</item>
    </style>

    <style name="Custom_editText_Helvetica65_12pts" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@fonts/helvetica65.ttf</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="AppAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimaryDark">@color/secondary_color_black</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Helvetica65_12pts_white" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@fonts/helvetica65.ttf</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/secondary_color_white</item>
    </style>

</resources>
