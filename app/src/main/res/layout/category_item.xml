<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/single_row_text"
            style="@style/customTextViewStyleHelveticaMedium"
            android:background="@drawable/nav_menu_item"
            android:text="Item List"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_toLeftOf="@+id/single_row_arrow"
            android:textColor="@drawable/nav_menu_item_text" />

        <ImageView
            android:id="@+id/single_row_arrow"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_6sdp"
            app:srcCompat="@drawable/vector_drawable_downarrow" />

    </RelativeLayout>

    <View style="@style/lineStyle" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlSubCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>